<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/brand_color"
        android:textSize="@dimen/brand_text_size"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_margin"
        android:adjustViewBounds="true"
        android:contentDescription="@string/brand_image_content_description"
        android:paddingHorizontal="@dimen/brand_image_padding_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/brand_image_main" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_margin"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/inner_layout_margin"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="@string/tv_choose_category"
                android:textColor="@color/hint_text_color"
                android:textSize="@dimen/hint_text_size"
                android:layout_marginBottom="@dimen/hint_bottom_margin"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/random_questions"
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/button_elevation"
                android:padding="@dimen/button_pudding"
                android:stateListAnimator="@null"
                android:text="@string/tv_random_questions"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size"
                app:cornerRadius="@dimen/button_corner_radius"
                app:rippleColor="@color/btn_ripple_color"
                app:strokeColor="@color/btn_stroke_color"
                app:strokeWidth="@dimen/button_stroke_width" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/text_questions"
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/button_elevation"
                android:stateListAnimator="@null"
                android:padding="@dimen/button_pudding"
                android:text="@string/tv_text_questions"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size"
                app:cornerRadius="@dimen/button_corner_radius"
                app:rippleColor="@color/btn_ripple_color"
                app:strokeColor="@color/btn_stroke_color"
                app:strokeWidth="@dimen/button_stroke_width" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/image_questions"
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/button_elevation"
                android:stateListAnimator="@null"
                android:padding="@dimen/button_pudding"
                android:text="@string/tv_guess_member"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size"
                app:cornerRadius="@dimen/button_corner_radius"
                app:rippleColor="@color/btn_ripple_color"
                app:strokeColor="@color/btn_stroke_color"
                app:strokeWidth="@dimen/button_stroke_width" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/your_results"
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/button_elevation"
                android:stateListAnimator="@null"
                android:padding="@dimen/button_pudding"
                android:text="@string/your_results"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size"
                app:cornerRadius="@dimen/button_corner_radius"
                app:rippleColor="@color/btn_ripple_color"
                app:strokeColor="@color/btn_stroke_color"
                app:strokeWidth="@dimen/button_stroke_width" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>